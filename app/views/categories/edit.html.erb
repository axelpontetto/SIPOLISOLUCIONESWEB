<div class="row">
 
<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Editar Categoria</h3>
      </div>
      <div class="panel-body">

        <%= form_for :category, url: category_path(@category), method: :patch do |f| %>

        <form>

            <div class="form-group">
              <%= f.label :nombre, 'Nombre' %><br />
              <%= f.text_field :nombre, autofocus: true, class:"form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Editar Categoria", class: "btn btn-success btn-block" %>
            </div>
    
        </form>
        
        <%end%>
       
      </div>
    </div>  
</div> 

</div>