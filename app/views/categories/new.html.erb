<div class="row">

<div class="col-md-6 col-md-offset-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Crear Categoria</h3>
      </div>
      <div class="panel-body">

        <%= form_for(@category) do |f| %>

        <form>

            <div class="form-group">
              <%= f.label :nombre, 'Nombre' %><br />
              <%= f.text_field :nombre, required: true, autofocus: true, class:"form-control" %>
              <% if @category.errors.messages[:nombre] && !@category.errors.messages[:nombre].empty? %>
                <%= "El nombre es invalido" %>
              <%end%>
            </div>
            <div class="form-group">
              <%= f.submit "Crear Categoria", class: "btn btn-success btn-block"%>
            </div>
    
        </form>
        
        <%end%>
       
      </div>
    </div>    

</div>
 
</div>